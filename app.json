{
	"id": "com.slack",
	"version": "2.0.0",
	"sdk": 2,
	"name": {
		"en": "Slack"
	},
	"description": {
		"en": "Slack for Homey"
	},
	"category": "internet",
	"compatibility": ">=1.5.0",
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"flow": {
		"actions": [
			{
				"id": "send_message",
				"title": {
					"en": "Send message"
				},
				"args": [
					{
						"name": "recipient",
						"placeholder": {
							"en": "Recipient"
						},
						"type": "autocomplete"
					},
					{
						"name": "message",
						"placeholder": {
							"en": "Message"
						},
						"type": "text"
					}
				]
			},
			{
				"id": "send_image",
				"title": {
					"en": "Send image"
				},
				"droptoken": "image",
				"args": [
					{
						"name": "recipient",
						"placeholder": {
							"en": "Recipient"
						},
						"type": "autocomplete"
					},
					{
						"name": "message",
						"placeholder": {
							"en": "Message"
						},
						"type": "text"
					}
				]
			}
		]
	}
}
